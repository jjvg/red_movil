<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.redcom" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>RedCom</name>
    <description>
      Red Social Comunitaria
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
      Equipo Lab
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="src/assets/img/rc1.png" />
        <icon density="mdpi" src="src/assets/img/rc1.png" />
        <icon density="hdpi" src="src/assets/img/rc1.png" />
        <icon density="xhdpi" src="src/assets/img/rc1.png" />
        <splash density="land-hdpi" src="src/assets/img/splash1.png" />
        <splash density="land-ldpi" src="src/assets/img/splash1.png" />
        <splash density="land-mdpi" src="src/assets/img/splash1.png" />
        <splash density="land-xhdpi" src="src/assets/img/splash1.png" />
        <splash density="port-hdpi" src="src/assets/img/splash1.png" />
        <splash density="port-ldpi" src="src/assets/img/splash1.png" />
        <splash density="port-mdpi" src="src/assets/img/splash1.png" />
        <splash density="port-xhdpi" src="src/assets/img/splash1.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="browser" spec="^5.0.1" />
    <engine name="android" spec="6.3.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-camera" spec="^3.0.0" />
    <plugin name="cordova-plugin-device-orientation" spec="^1.0.7" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.1.0" />
</widget>
